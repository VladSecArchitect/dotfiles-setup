# Use the server-provided last modification date for downloaded files
# Использовать дату последнего изменения с сервера для загруженных файлов
timestamping = on

# Do not ascend to the parent directory when downloading recursively
# Не подниматься вверх по структуре директорий при рекурсивной загрузке
no_parent = on

# Set a timeout for all operations (DNS, connect, read, etc.)
# Установить тайм-аут для всех операций (DNS, подключение, чтение и т.д.)
timeout = 60

# Retry failed downloads a limited number of times
# Повторить неудачные загрузки несколько раз
tries = 3

# Retry even if the connection was refused
# Повторять попытки даже при отказе в подключении
retry_connrefused = on

# Use the last component of a redirection URL for the local file name
# Использовать последний компонент URL-редиректа как имя локального файла
trust_server_names = on

# Follow FTP links from HTML documents by default
# Следовать FTP-ссылкам в HTML-документах по умолчанию
follow_ftp = on

# Automatically adjust file extensions for certain MIME types
# Автоматически добавлять расширения файлов для определённых MIME-типов
adjust_extension = on

# Ignore robots.txt to allow unrestricted crawling
# Игнорировать robots.txt для неограниченного парсинга
robots = off

# Display server responses for HTTP and FTP
# Отображать ответы серверов для HTTP и FTP
server_response = on

# Set a custom user-agent (e.g., disguise as the latest Chrome)
# Установить пользовательский агент (например, для маскировки под последний Chrome)
user_agent = Mozilla/5.0 (Macintosh; Intel Mac OS X 13_2_1) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/117.0.5938.132 Safari/537.36

# Prefer IPv6, fallback to IPv4 if not available
# Предпочитать IPv6, использовать IPv4 при отсутствии поддержки
prefer_family = IPv6

# Create a backup file instead of overwriting existing files
# Создавать резервные копии вместо перезаписи существующих файлов
backup_converted = on

# Limit download speed to avoid network overload
# Ограничить скорость загрузки для предотвращения перегрузки сети
limit_rate = 1m

# Set the default directory for downloaded files
# Установить директорию по умолчанию для загрузки файлов
dir_prefix = ~/Downloads

# Automatically decompress files during download
# Автоматически распаковывать файлы во время загрузки
content_disposition = on

# Enable detailed logging for debugging purposes
# Включить детальное логирование для отладки
debug = on
logfile = ~/wget.log

# Disable SSL certificate checks (use with caution)
# Отключить проверку SSL-сертификатов (используйте с осторожностью)
check_certificate = off

# Add custom HTTP headers for specific requests
# Добавить пользовательские HTTP-заголовки для конкретных запросов
header = Accept-Language: en-US,en;q=0.9

# Configure verbosity and progress display
# Настроить уровень детализации и отображение прогресса
verbose = on
progress = bar

# Set system encoding to UTF-8
# Установить системную кодировку в UTF-8
local_encoding = UTF-8

# Proxy settings (adjust as necessary)
# Настройки прокси (измените при необходимости)
# Use a proxy server for HTTP/HTTPS requests
# Использовать прокси-сервер для HTTP/HTTPS запросов
# http_proxy = http://proxy.example.com:8080
# https_proxy = https://proxy.example.com:8080

# Do not use a proxy for local addresses
# Не использовать прокси для локальных адресов
no_proxy = localhost,127.0.0.1,::1

# Use authentication for the proxy (uncomment and set if required)
# Использовать аутентификацию для прокси (раскомментируйте и настройте при необходимости)
#proxy_user = username
#proxy_password = password
